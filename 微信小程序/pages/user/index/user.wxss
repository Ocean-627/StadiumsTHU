/* pages/user/user.wxss */
page {
  background-color: #F2F2F2;
  height:100%;
}

.container {
  width: 100%;
  padding:0;
  height:80%;
  display: flex;
  flex-direction: column;
}

.info-menu {
  position: relative;
  width:100%;
  height:50%;
  background-color: white;
}

.info-wrapper {
  position: relative;
  width:100%;
  height:70%;
  background-color: #44454A;
}

.pic-wrapper {
  position: absolute;
  left:10%;
  top:13%;
  width:120rpx;
  height:120rpx;
  background-color: white;
  border-radius: 50%;
}

.info-wrapper #nickname {
  position: absolute;
  left:30%;
  top:15%;
  color:white;
  font-size:larger;
  font-weight: 500;
}

.info-wrapper #userId {
  position: absolute;
  left:30%;
  top:30%;
  color:grey;
  font-size:small;
} 

.menu-wrapper {
  position: relative;
  margin-left: auto;
  margin-right: auto;
  margin-top:-15%;
  display: flex;
  flex-direction: row;
  width:90%;
  height:35%;
  background-color: white;
  box-shadow:0px 2px 6px 0px rgba(0,0,0,0.12);
}

.info-menu .choice-wrapper {
  position: relative;
  width:25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.info-menu .choice-wrapper text {
  font-size: small;
  margin-top:10%;
}

.info-menu .pic-wrapper image {
  width:120rpx;
  height:120rpx;
}

.menu-wrapper image {
  width:60rpx;
  height:60rpx;
}

.hmenu {
  position: relative;
  width:100%;
  height:50%;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
}

.hmenu-wrapper {
  position: relative;
  width:100%;
  height:70%;
  margin-top:-15%;
}

.hmenu .choice-wrapper {
  position: relative;
  width:100%;
  height:30%;
  background-color: white;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.hmenu .choice-wrapper text{
  position: relative;
  margin-left: 5%;
  align-self: center;
  font-size: medium;
}

.hmenu .choice-wrapper image{
  width:60rpx;
  height:60rpx;
  align-self: center;
  margin-right:3%; 
}

#exit{
  position: relative;
  width:80%;
  font-size: medium;
  color:white;
  background-color: red;
}