/* pages/map/map.wxss */
page {
  height:100%;
}
.container {
  width:100%;
  padding:0;
  height:100%;
  display: flex;
  flex-direction: column;
}

.map-wrapper {
  width:100%;
  flex-grow: 1;
}

.map-wrapper map {
  width:100%;
  height: 100%;
}

.map-wrapper view {
  position: absolute;
  width:60rpx;
  height:60rpx;
  left:90%;
  top:5%;
  background-color: white;
  text-align: center;
  box-shadow: 2px 2px 6px 0px rgba(0,0,0,.12);
  opacity: 0.8;
}

.map-wrapper .search-btn {
  border-radius: 10rpx 10rpx 0 0;
}

.map-wrapper .my-pos {
  margin-top:60rpx;
  border-radius: 0rpx 0rpx 15rpx 15rpx;
  border-top: solid rgba(0,0,0,.12) 1px;
}

.map-wrapper .clickedBtn {
  background-color: rgba(0,0,0,.2);
}

.map-wrapper image {
  height:40rpx;
  width: 40rpx;
  margin-top:10rpx;
}

.search-wrapper {
  width:100%;
}