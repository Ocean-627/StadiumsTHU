<!--pages/stadium/comment/comment.wxml-->
<view class="container">
  <view class="info-wrapper">
    <image src="{{stadium_img}}"></image>
    <view class="stadium-info">
      <text id="stadium-name">{{stadium_name}}</text>
      <text id="court-name">{{court_name}}</text>
    </view>
  </view>
  <view class="score-wrapper">
    <view class="left-deco"></view>
    <text>打分</text>
    <view class="right-deco"></view>
  </view>
  <view class="star-wrapper">
    <view class="star" wx:for="{{star_list}}" data-index="{{index}}" bindtap="change_score">
      <image src="{{isfavor_img}}" wx:if="{{item === 1}}"></image>
      <image src="{{notfavor_img}}" wx:else></image>
    </view>
  </view>
  <view class="input-wrapper">
    <textarea placeholder="{{comment_placeholder}}" value="{{comment_text}}" bindinput="onModifyComment"></textarea>
  </view>
  <view class="pic-chooser">
    <mp-uploader bindfail="uploadError" bindsuccess="uploadSuccess" select="{{selectFile}}" upload="{{uplaodFile}}" files="{{files}}" max-count="5" title="图片上传"></mp-uploader>
  </view>
  <view class="upload-wrapper">
    <van-button round class="op-btn" custom-class="van-btn"
    color="linear-gradient(to right, #7232dd, #760280)" bindtap="makeComment"
    >发表</van-button>
  </view>
</view>