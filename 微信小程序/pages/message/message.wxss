/* pages/message/message.wxss */
page {
  background-color: #F2F2F2;
}

.container {
  width: 100%;
  padding:0;
  display: flex;
  flex-direction: column;
  justify-content: start;
}

.notice {
  margin-top:10px;
  width:100%;
  text-align: center;
}

.notice #count {
  font-size:13px;
}

.notice #mark-all {
  color:#3D7CFF;
  margin-left:2%;
  font-size:13px;
}

.msg-list {
  width:100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.msg-item {
  margin-top:10px;
  box-sizing: border-box;
  width:92%;
  padding-left: 3%;
  padding-right: 3%;
  background-color: white;
  border-radius: 10px;
}

.msg-item .info {
  margin-top:10px;
  margin-bottom: 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.info .img-wrapper {
  position: relative;
  background-color: #34AEFF;
  border-radius: 5px;
  width:40px;
  height:40px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items:center;
}

.img-wrapper #icon {
  width:25px;
  height:25px;
}

.info .title {
  display: flex;
  flex-direction: column;
  margin-left:4%;
}

.title #disc {
  font-size:16px;
  font-weight: 700;
}

.title #date {
  font-size:13px;
  color:rgba(0,0,0,0.4);
}

.info #dot {
  margin-left:auto;
  align-self: flex-start;
  width:20px;
  height:20px;
}

.msg-item .content {
  margin-bottom: 10px;
}

.content #plain-text {
  color:rgba(0,0,0,0.7)
}