/* pages/login/login.wxss */
page {
  background-color: #F2F2F2;
}

.container {
  width: 100%;
  height: 100%;
}

/*登录注册选择栏*/
.menu {
  position: relative;
  width:100%;
  height:40px;
  display: flex;
  flex-direction: row;
}

.menu view {
  border-bottom: solid;
  border-width: 1px;
  text-align: center;
  font-size: 18px;
  font-weight: 600;
  width:50%;
  height:100%;
}

.menu .active {
  border-color: #A300B2;
  color:#A300B2;
}

.menu .sleep {
  border-color: #BBBBBB;
  color:#BBBBBB;
}

/*输入框*/
.input {
  position: relative;
  width: 100%;
  height:60%;
  margin-top: 10%;
}

.wrapper {
  display: flex;
  flex-direction: row;
  margin-top: 5%;
}

input,#login-btn {
  margin-left: auto;
  margin-right: auto;
  width: 80%;
  height: 40px;
  font-size: 15px;
  background-color: white;
}

.input-left {
  position: absolute;
  width:40px;
  height:40px;
  border-radius: 50%;
  background-color: white;
  margin-left:calc(10% - 20px);
}

.input-right {
  position: absolute;
  width:40px;
  height:40px;
  border-radius: 50%;
  background-color: white;
  margin-left:calc(90% - 20px);
}

/*提示*/
.tip {
  position: relative;
  text-align: right;
  display: flex;
  flex-direction: row-reverse;
  width:80%;
}

.no-acc text {
  font-size:10px;
  color:rgba(0,0,0,0.4);
}

.reg-tip text {
  font-size:10px;
  color:#A300B2;
}

/*按钮*/
.btn {
  position: relative;
  width: 100%;
  margin-top:15%;
}

.btn .input-left, .btn .input-right {
  background-color: #A300B2;
}

#login-btn {
  background-color: #A300B2;
  color:white;
}